<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:view="clr-namespace: OneHundredCommonThings.View;assembly=OneHundredCommonThings"
    x:Class="OneHundredCommonThings.Screen.CategoryScreen">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
  </ContentPage.Padding>
  
  <StackLayout>
    <ListView x:Name="RssView" ItemsSource="{Binding}" IsPullToRefreshEnabled="True"
              Refreshing="RssView_Refreshing"
              IsRefreshing="{Binding IsBusy, Mode=OneWay}"

              ItemTapped="RssView_ItemTapped" ListView.RowHeight="100">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
              <StackLayout Padding="5">
                <Label Text="{Binding CategoryId}" />
                <Label Text="{Binding CategoryName}" />
                <Label Text="{Binding Description}"/>
                <view:TopicsView />
              </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>

  <ContentPage.ToolbarItems>
    <ToolbarItem Name="RefreshButton" Clicked="RefreshButton_Clicked" Text="Refresh" Order="Secondary" Priority="0"/>
  </ContentPage.ToolbarItems>
</ContentPage>